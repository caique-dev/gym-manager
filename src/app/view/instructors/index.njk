{% extends 'layout.njk' %}

{% block content %}
    <section class="card table_container">

        <header class="filter">
        <a href="/instructors/create">Novo</a>

        <form action="/instructors" method="get">
            <input type="text" name="filter" placeholder="Filtrar por nome">
            <button type="submit">Filtrar</button>
        </form>
        </header>

        <table class="instructors_table">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Acompanhamentos</th>
                    <th>Alunos</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ instructor.avatar_url }})"></span>
                            {{ instructor.name }}
                        </td>
                        <td class="services">
                            <div>
                                {% for service in instructor.services %}
                                    <span>{{ service }}</span>
                                {% endfor %}
                            </div>
                        </td>
                        <td class="members">{{ instructor.total_members }}</td>
                        <td><a href="/instructors/{{ instructor.id }}">Ver</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>    
{% endblock content %}