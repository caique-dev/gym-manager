{% extends 'layout.njk' %}

{% block content %}
    <section class="card">
        <div class="avatar" style="background: url({{ member.avatar_url }}) no-repeat center / cover"></div>

        <div class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>member</div>
                <div>{{ member.name }}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{ member.birth }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ 'Masculino' if member.gender == "M" else 'Feminino' }}</div>
            </div>

            <div class="item">
                <div>Tipo sanguíneo</div>
                <div>{{ member.blood_type }}</div>
            </div>

            <div class="item">
                <div>Peso (kg)</div>
                <div>{{ member.weight }} </div>
            </div>

            <div class="item">
                <div>Altura (cm)</div>
                <div>{{ member.height }} </div>
            </div>
            


            <a href="/members/{{ member.id }}/edit" class="edit_button">Editar</a>
        </div>
    </section>    
{% endblock content %}